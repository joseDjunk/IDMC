<!DOCTYPE html>

<% searchBar=true; sidebarTitle="searchCustomer" %>
    <%- include('./../templates/admin-head.ejs') %>

        <html lang="en">

        <body>
            <%- include('./../templates/admin-header.ejs') %>
                <%- include('./../templates/admin-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section">
                            <div class="row">

                                <div class="col-lg-12">

                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Advanced Search Agents</h5>

                                            <!-- Advanced Form Elements -->
                                            <form id="searchForm" action="searchAgent" method="POST">


                                                <div class="row mb-3">

                                                    <div class="col-sm-12">
                                                        <div class="form-floating mb-3">
                                                            <input type="text" class="form-control" id="agent_name"
                                                                name="agent_name" placeholder="Please enter name">
                                                            <label for="floatingInput">Agent Name</label>
                                                        </div>
                                                        <div class="form-floating mb-3">
                                                            <textarea class="form-control"
                                                                placeholder="Leave a comment here" id="floatingTextarea"
                                                                style="height: 100px;"></textarea>
                                                            <label for="floatingTextarea">Comments</label>
                                                        </div>
                                                        <div class="form-floating mb-3">
                                                            <select class="form-control" id="region_id"
                                                                name="region_id">
                                                                <option value="">Select Region</option>
                                                                <% regions.forEach(region=> { %>
                                                                    <option value="<%= region.id %>">
                                                                        <%= region.region_name %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>

                                                            <label for="floatingSelect">Works with selects</label>
                                                        </div>
                                                    </div>
                                                </div>


                                                <button type="submit" class="btn btn-outline-success">
                                                    Search Customer
                                                </button>



                                            </form><!-- End General Form Elements -->



                                        </div>
                                    </div>

                                </div>
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./../templates/admin-footer.ejs') %> <%-
                            include('./../templates/admin-footerScript.ejs') %>
        </body>
        <script type="text/javascript" src="/js/admin/searchAgent.js"></script>

        </html>