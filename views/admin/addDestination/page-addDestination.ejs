<% searchBar=true; sidebarTitle="addDestination" %>
    <%- include('./../templates/admin-head.ejs') %>
        <!DOCTYPE html>
        <html lang="en">

        <body>
            <%- include('./../templates/admin-header.ejs') %>
                <%- include('./../templates/admin-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section dashboard">
                            <div class="row">
                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title">Create New Destination</h5>

                                                    <!-- Floating Labels Form -->
                                                    <form class="row g-3" action="addDestination" method="POST">
                                                        <div class="col-md-12">
                                                            <div class="form-floating">
                                                                <input type="text" name="destination_name"
                                                                    class="form-control" placeholder=""
                                                                    id="destinationName" />
                                                                <label for="destinationName">Destination
                                                                    Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <div class="form-floating">
                                                                <select id="agentRegion" name="region_id"
                                                                    class="form-control">
                                                                    <option value="">Select Region</option>
                                                                    <% regions.forEach(region=> { %>
                                                                        <option value="<%= region.id %>">
                                                                            <%= region.region_name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="agentRegion">Region</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <select id="state" name="state" class="form-control">
                                                                    <option value="">Select State/UT
                                                                    </option>
                                                                    <% states.forEach(function(state,index){ %>
                                                                        <option value="<%= state %>">
                                                                            <%= state %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="state">State/UT</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="country" class="form-control"
                                                                    placeholder="" id="country" />
                                                                <label for="country">Country</label>
                                                            </div>
                                                        </div>


                                                        <div class="text-center">
                                                            <button type="submit" class="btn btn-primary">
                                                                Submit
                                                            </button>
                                                            <button type="reset" class="btn btn-secondary">
                                                                Reset
                                                            </button>
                                                        </div>

                                                    </form>
                                                    <!-- End floating Labels Form -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Left side columns -->
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./../templates/admin-footer.ejs') %> <%-
                            include('./../templates/admin-footerScript.ejs') %>
        </body>

        </html>