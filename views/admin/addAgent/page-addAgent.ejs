<% searchBar=true; sidebarTitle="addCustomer" %>
    <%- include('./../templates/admin-head.ejs') %>
        <!DOCTYPE html>
        <html lang="en">

        <body>
            <%- include('./../templates/admin-header.ejs') %>
                <%- include('./../templates/admin-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section dashboard">
                            <div class="row">
                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title">Create New Agent</h5>

                                                    <!-- Floating Labels Form -->
                                                    <form class="row g-3" action="addAgent" method="POST">
                                                        <div class="col-md-12">
                                                            <div class="form-floating">
                                                                <input type="text" name="agentName" class="form-control"
                                                                    placeholder="" id="agentName" />
                                                                <label for="agentName">Agent Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <textarea name="address" class="form-control"
                                                                    placeholder="" placeholder="Address" id="address"
                                                                    name="address" style="height: 100px"></textarea>
                                                                <label for="address">Agent Office Address</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="agentCity" class="form-control"
                                                                    placeholder="" id="agentCity" />
                                                                <label for="agentCity">City</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <select id="agentRegion" name="agentRegion"
                                                                    class="form-control">
                                                                    <option value="">Select Region</option>
                                                                    <% regions.forEach(region=> { %>
                                                                        <option value="<%= region.id %>">
                                                                            <%= region.region_name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="agentRegion">Region</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="agentDistrict"
                                                                    class="form-control" placeholder=""
                                                                    id="agentDistrict" />
                                                                <label for="agentDistrict">District</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="agentState"
                                                                    class="form-control" placeholder=""
                                                                    id="agentState" />
                                                                <label for="agentState">State</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="agentPin" class="form-control"
                                                                    placeholder="" id="agentPin" />
                                                                <label for="agentPin">Pincode</label>
                                                            </div>
                                                        </div>
                                                        <h1 class="card-title">Contact details </h1>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="firstName" class="form-control"
                                                                    placeholder="" id="firstName" />
                                                                <label for="firstName">First name of contact
                                                                    person</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="lastName" class="form-control"
                                                                    placeholder="" id="lastName" />
                                                                <label for="lastName">Last name of contact
                                                                    person</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="contactNumber" placeholder=""
                                                                    class="form-control" id="number" />
                                                                <label for="number">Contact Number</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="altContactNumber"
                                                                    placeholder="" class="form-control"
                                                                    id="altContactNumber" />
                                                                <label for="altContactNumber">Alternate Contact
                                                                    Number</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="email" name="email" class="form-control"
                                                                    placeholder="" id="email" />
                                                                <label for="email">Email Id</label>
                                                            </div>
                                                        </div>
                                                        <h1 class="card-title">Chose destinations where they serve </h1>

                                                        <div class="col-md-6">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="gridCheck1">
                                                                <label class="form-check-label" for="gridCheck1">
                                                                    Example checkbox
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <select id="agentDestination" name="agentDestination"
                                                                    class="form-control">
                                                                    <option value="">Select Region</option>
                                                                    <% destinations.forEach(region=> { %>
                                                                        <option value="<%= region.id %>">
                                                                            <%= region.destination_name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="agentDestination">Destination</label>
                                                            </div>
                                                        </div>
                                                        <div class="text-center">
                                                            <button type="submit" class="btn btn-primary">
                                                                Submit
                                                            </button>
                                                            <button type="reset" class="btn btn-secondary">
                                                                Reset
                                                            </button>
                                                        </div>

                                                    </form>
                                                    <!-- End floating Labels Form -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Left side columns -->
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./../templates/admin-footer.ejs') %> <%-
                            include('./../templates/admin-footerScript.ejs') %>
        </body>

        </html>