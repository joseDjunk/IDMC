<% searchBar=true; sidebarTitle="leads" %>
    <%- include('./../templates/admin-head.ejs') %>
        <!DOCTYPE html>
        <html lang="en">
        <link rel="stylesheet" href="/css/marketing-manager/mm-marketing-manager.css">

        <body>
            <%- include('./../templates/admin-header.ejs') %>
                <%- include('./../templates/admin-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section dashboard">
                            <div class="row">
                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">


                                                    <div id="searchParams">
                                                        <form class="row g-3" action="addLead" method="POST">
                                                            <h5 class="card-title">Create a new lead : <%= agent_name %>
                                                            </h5>
                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <input type="text" name="agentId"
                                                                        class="form-control" placeholder="Address"
                                                                        id="agentId" value="<%= agent_id %>" readonly />
                                                                    <label for="agentId">Agent Id</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <input type="text" name="agentName"
                                                                        class="form-control" placeholder="Address"
                                                                        id="agentNamev" value="<%= agent_name %>"
                                                                        readonly />
                                                                    <label for="agentName">Agent Name</label>
                                                                </div>
                                                            </div>
                                                            <h5 class="card-title">Lead Details</h5>

                                                            <div class="col-md-8">
                                                                <div class="form-floating">
                                                                    <select id="destinationId" name="destinationId"
                                                                        class="form-control">
                                                                        <option value="">Select Destination</option>
                                                                        <% destinations.forEach(destination=> { %>
                                                                            <option value="<%= destination.id %>">
                                                                                <%= destination.destination_name %>
                                                                            </option>
                                                                            <% }) %>
                                                                    </select>
                                                                    <label for="destinationId">Destination</label>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <input type="text" name="noOfDays"
                                                                        class="form-control" placeholder="Address"
                                                                        id="noOfDays" />
                                                                    <label for="noOfDays">No. of Days</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <input type="text" name="noOfNights"
                                                                        class="form-control" placeholder="Address"
                                                                        id="noOfNights" />
                                                                    <label for="noOfNights">Number of nights</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <select id="dmcId" name="dmcId"
                                                                        class="form-control">
                                                                        <option value="">Select DMC</option>
                                                                        <% dmcs.forEach(dmc=> { %>
                                                                            <option value="<%= dmc.id %>">
                                                                                <%= dmc.dmc_name %>
                                                                            </option>
                                                                            <% }) %>
                                                                    </select>
                                                                    <label for="dmcId">Choose DMC</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-floating">
                                                                    <select id="salesPerson" name="salesPerson"
                                                                        class="form-control">
                                                                        <option value="">Select marketing-manager
                                                                        </option>
                                                                        <% employees.forEach(employee=> { %>
                                                                            <option value="<%= employee.emp_id %>">
                                                                                <%= employee.first_name+" "+employee.last_name %>
                                                                            </option>
                                                                            <% }) %>
                                                                    </select>
                                                                            <label for=" salesPerson">Choose Marketing
                                                                                    Manager</label>
                                                                </div>
                                                            </div>
                                                            <div class="text-center">
                                                                <button type="submit" class="btn btn-primary">
                                                                    Submit
                                                                </button>
                                                                <button type="reset" class="btn btn-secondary">
                                                                    Reset
                                                                </button>
                                                            </div>
                                                        </form>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Left side columns -->
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./../templates/admin-footer.ejs') %>
                        <%- include('./../templates/admin-footerScript.ejs') %>

        </body>

        </html>