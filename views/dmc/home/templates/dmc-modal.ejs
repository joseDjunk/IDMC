<!-- Vertically centered Modal -->
<div class="card-body">
    <div class="modal fade" id="verticalycentered" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">


                    <h2 class="card-title" id="modal-header"></h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">


                    <form>
                        <div class="row mb-3">
                            <label f class="col-sm-2 ">Packs</label>
                            <div class="col-sm-10">
                                <span id="modal-numPeople"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label f class="col-sm-2 ">Start Date</label>
                            <div class="col-sm-10">
                                <span id="modal-startDate"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label f class="col-sm-2 ">End Date</label>
                            <div class="col-sm-10">
                                <span id="modal-endDate"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Amount</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="modal-amount">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Remarks</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" style="height: 100px"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                  <select class="form-select" aria-label="Default select example">
                                    <option selected>Early state</option>
                                    <option value="1">Accepted and started processing</option>
                                    <option value="2">Negotiation</option>
                                    <option value="3">Finalized Numbers</option>
                                    <option value="3">Payment Recieved</option>
                                  </select>
                                </div>
                              </div>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="deleteLead()">Delete Lead</button>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- End Vertically centered Modal-->