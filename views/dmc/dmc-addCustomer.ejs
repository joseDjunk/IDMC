<% searchBar=true; sidebarTitle="addCustomer" %>
    <%- include('./templates/dmc-head.ejs') %>
        <!DOCTYPE html>
        <html lang="en">

        <body>
            <%- include('./templates/dmc-header.ejs') %>
                <%- include('./templates/dmc-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section dashboard">
                            <div class="row">
                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title">Create New Customer</h5>

                                                    <!-- Floating Labels Form -->
                                                    <form class="row g-3" action="addCustomer" method="POST">
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="firstName" class="form-control"
                                                                    placeholder="" id="firstName" />
                                                                <label for="firstName">First Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="lastName" class="form-control"
                                                                    placeholder="" id="lastName" />
                                                                <label for="lastName">Last Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="email" name="email" class="form-control"
                                                                    placeholder="" id="email" />
                                                                <label for="email">Client Email</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="contactNumber" placeholder=""
                                                                    class="form-control" id="number" />
                                                                <label for="number">Contact Number</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <textarea name="address" class="form-control"
                                                                    placeholder="" placeholder="Address" id="address"
                                                                    style="height: 100px"></textarea>
                                                                <label for="address">Client Address</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-floating mb-3">
                                                                <select class="form-select" name="state" id="state"
                                                                    aria-label="State">
                                                                    <option selected>Select State</option>
                                                                    <option value="Kerala">Kerala</option>
                                                                    <option value="DC">DC</option>
                                                                </select>
                                                                <label for="state">State</label>
                                                            </div>
                                                        </div>
                                                        <div class="text-center">
                                                            <button type="submit" class="btn btn-primary">
                                                                Submit
                                                            </button>
                                                            <button type="reset" class="btn btn-secondary">
                                                                Reset
                                                            </button>
                                                        </div>
                                                    </form>
                                                    <!-- End floating Labels Form -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Left side columns -->
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./templates/dmc-footer.ejs') %> <%- include('./templates/dmc-footerScript.ejs') %>
        </body>

        </html>