<% searchBar=true; sidebarTitle="packages" %>
    <%- include('./../templates/dmc-head.ejs') %>
        <!DOCTYPE html>
        <html lang="en">

        <body>
            <%- include('./../templates/dmc-header.ejs') %>
                <%- include('./../templates/dmc-sidebar.ejs') %>

                    <main id="main" class="main">
                        <div class="pagetitle">
                            <!-- <h1>Marketing Manager Dashboard</h1> -->
                        </div>
                        <!-- End Page Title -->

                        <section class="section dashboard">
                            <div class="row">
                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= title %>
                                                    </h5>

                                                    <!-- Floating Labels Form -->
                                                    <form class="row g-3" action="addPackage" method="POST"
                                                        enctype="multipart/form-data">
                                                        <div class="col-md-12">
                                                            <div class="form-floating">
                                                                <input type="text" name="packageName"
                                                                    class="form-control" placeholder=""
                                                                    id="packageName" required />
                                                                <label for="packageName">Package Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <div class="form-floating mb-3">
                                                                <select class="form-select" name="destination"
                                                                    id="destination" aria-label="State">
                                                                    <% destinations.forEach(destination=>{
                                                                        %>
                                                                        <option value="<%= destination.id %>">
                                                                            <%= destination.destination_name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="destination">Destination</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating mb-3">
                                                                <select class="form-select" name="package_type"
                                                                    id="package_type" aria-label="State">
                                                                    <% packageType.forEach(package=>{
                                                                        %>
                                                                        <option value="<%= package %>">
                                                                            <%= package %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                                <label for="package_type">Package Type</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="amount" class="form-control"
                                                                    placeholder="" id="amount" required />
                                                                <label for="amount">Amount per head</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="days" class="form-control"
                                                                    placeholder="" id="days" />
                                                                <label for="days">No of Days</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="text" name="nights" placeholder=""
                                                                    class="form-control" id="nights" required />
                                                                <label for="nights">No of Nights</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="date" name="start_date" placeholder=""
                                                                    class="form-control" id="start_date" required />
                                                                <label for="start_date">Start Date</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-floating">
                                                                <input type="date" name="end_date" placeholder=""
                                                                    class="form-control" id="end_date" required />
                                                                <label for="end_date">Expiry Date</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-floating">
                                                                <textarea name="address" class="form-control"
                                                                    placeholder="" placeholder="details" id="details"
                                                                    style="height: 100px" required></textarea>
                                                                <label for="details">Package Details</label>
                                                            </div>
                                                        </div>


                                                        <div class="col-md-12">
                                                            <label for="file" class="col-sm-4 col-form-label">Upload
                                                                Package Brochure</label>
                                                            <div class="col-sm-10">
                                                                <input class="form-control" name="file" type="file"
                                                                    id="formFile">
                                                            </div>
                                                        </div>
                                                        <div class="text-center">
                                                            <button type="submit" class="btn btn-primary">
                                                                Submit
                                                            </button>
                                                            <button type="reset" class="btn btn-secondary">
                                                                Reset
                                                            </button>
                                                        </div>
                                                    </form>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Left side columns -->
                            </div>
                        </section>
                    </main>
                    <!-- End #main -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>
                    <%- include('./../templates/dmc-footer.ejs') %> <%- include('./../templates/dmc-footerScript.ejs')
                            %>
        </body>

        </html>