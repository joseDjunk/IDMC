<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <%= chartTitle %>
        </h5>

        <!-- Bar Chart -->
        <div id="circleChartSingle" style="max-height: 400px"></div>
        <script>
            const percentage = <%- JSON.stringify(targetPercentage) %>;
            const targetAmount = (<%- JSON.stringify(targetAmount) %>);
            const salesAmount = <%- JSON.stringify(salesAmount) %>;
            console.log("Target Amount : "+typeof (targetAmount));
                console.log("Target Amount : " +  (targetAmount));
                    console.log("salesAmount Amount : " + (salesAmount));
                    console.log("Target Amount : " + (targetAmount).length);
                console.log("salesAmount Amount : " + typeof salesAmount);
                document.addEventListener("DOMContentLoaded", () => {
                    new ApexCharts(document.querySelector("#circleChartSingle"), {
                        series: [percentage],
                        chart: {
                            height: 350,
                            type: 'radialBar',
                            offsetY: -10
                        },
                        plotOptions: {
                            radialBar: {
                                startAngle: -135,
                                endAngle: 135,
                                dataLabels: {
                                    name: {
                                        fontSize: '16px',
                                        color: undefined,
                                        offsetY: 120
                                    },
                                    value: {
                                        offsetY: 76,
                                        fontSize: '22px',
                                        color: undefined,
                                        formatter: function (val) {
                                            return val + "%";
                                        }
                                    }
                                }
                            }
                        },
                        fill: {
                            type: 'gradient',
                            gradient: {
                                shade: 'dark',
                                shadeIntensity: 0.15,
                                inverseColors: false,
                                opacityFrom: 1,
                                opacityTo: 1,
                                stops: [0, 50, 65, 91]
                            },
                        },
                        stroke: {
                            dashArray: 4
                        },
                        labels: [parseInt(salesAmount).toLocaleString('en-IN', {
                            maximumFractionDigits: 2,
                            style: 'currency',
                            currency: 'INR'
                        })  +" / "+ parseInt(targetAmount).toLocaleString('en-IN', {
                            maximumFractionDigits: 2,
                            style: 'currency',
                            currency: 'INR'
                        })],
                    }).render();
                });
        </script>
        <!-- End Bar CHart -->
    </div>
</div>