<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <%= chartTitle %>
        </h5>

        <!-- Bar Chart -->
        <div id="radar" style="max-height: 400px"></div>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                new ApexCharts(document.querySelector("#radar"), {
                    series: [{
                        name: 'Nikunj',
                        data: [80, 50, 30, 46, 30],
                    }, {
                        name: 'Average',
                        data: [20, 30, 40, 45, 78],
                    }],
                    chart: {
                        height: 350,
                        type: 'radar',
                        dropShadow: {
                            enabled: true,
                            blur: 1,
                            left: 1,
                            top: 1
                        }
                    },
                    plotOptions: {
                        radar: {
                            size: 140,
                            polygons: {
                                strokeColors: '#e9e9e9',
                                fill: {
                                    colors: ['#f8f8f8', '#fff']
                                }
                            }
                        }
                    },
                    title: {
                        text: ''
                    },
                    stroke: {
                        width: 2
                    },
                    fill: {
                        opacity: 0.1
                    },
                    markers: {
                        size: 2,
                        colors: ['#fff'],
                        strokeColor: '#FF4560',
                        strokeWidth: 2,
                    },
                    yaxis: {
                        stepSize: 20
                    },
                    xaxis: {
                        categories: ['Leads', 'Sales', 'Revenue', 'Others', 'Some other']
                    }

                }).render();
            });
        </script>
        <!-- End Bar CHart -->
    </div>
</div>